<h1>Lista de usuarios</h1>

<table>
	<tr>
		<th>Nombre del usario</th>
		<th>Email</th>
		<th>Acciones</th>
	</tr>
	<% @clients.each do |client| %>

		<tr>
			<td><%= client.name %></td>
			<td><%= client.email %></td>
			<td><%= link_to 'Ver detalle', url_for(controller: :clients, action: :show, id: client.id) %> ..
				<%= link_to 'Editar usuario', edit_client_path(client) %> ..
				<%= link_to 'Eliminar', client, method: :delete, data: {confirm: 'EstÃ¡ seguro?'} %>
			</td>

		</tr>
	<% end %>
</table>
<p><%= "Existen #{@clients.size} usuarios" %></p>


